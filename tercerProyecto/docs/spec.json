        "content": {
          "text/plain": {
            "schema": {
              "type": "string",
              "example": "OK"
            }
          }
        }
      }
    },
    "requestBodies": {
      "Producto": {
        "description": "Producto a crear",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Producto"
            }
          }
        }
      },
      "Usuario": {
        "description": "Usuario a crear",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Usuario"
            }
          }
        }
      },
      "Nota": {
        "description": "Nota de pedido a realizar",
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "Productos": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Producto"
                  }
                },
                "Efectivo": {
                  "type": "boolean",
                  "description": "Paga en efectivo"
                }
              }
            }
          }
        }
      },
      "basePedidos": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "prod": {
                  "type": "string",
                  "description": "ID's de los productos pedidos",
                  "example": "3,4,6,1,0,2"
                },
                "pago": {
                  "type": "boolean",
                  "description": "Paga en efectivo"
                }
              }
            }
          }
        }
      },
      "modPedidos": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer"
                },
                "hora": {
                  "type": "string",
                  "example": "16:42"
                },
                "prod": {
                  "type": "string",
                  "description": "ID's de los productos pedidos",
                  "example": "3,4,6,1,0,2"
                },
                "usuario": {
                  "type": "integer"
                },
                "pago": {
                  "type": "boolean",
                  "description": "Paga en efectivo"
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "Cliente": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string"
          },
          "direccion": {
            "type": "string"
          },
          "telefono": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "Producto": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string"
          },
          "short": {
            "type": "string"
          },
          "img": {
            "type": "string"
          },
          "precio": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Pedidos": {
        "type": "object",
        "properties": {
          "Cliente": {
            "$ref": "#/components/schemas/Cliente"
          },
          "Productos": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "Cantidad": {
                  "type": "integer",
                  "format": "int32"
                },
                "Producto": {
                  "$ref": "#/components/schemas/Producto"
                }
              }
            }
          },
          "Hora": {
            "type": "string",
            "example": "16:42"
          },
          "Status": {
            "type": "integer",
            "format": "int32"
          },
          "Efectivo": {
            "type": "boolean"
          }
        }
      },
      "Usuario": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "format": "password"
          },
          "nombre": {
            "type": "string"
          },
          "correo": {
            "type": "string"
          },
          "telefono": {
            "type": "integer",
            "format": "int64"
          },
          "dir": {
            "type": "string"
          }
        }
      }
    },
    "examples": {
      "username": {
        "value": "SQLITE_CONSTRAINT: UNIQUE constraint failed: usuarios.username"
      },
      "telefono": {
        "value": "SQLITE_CONSTRAINT: UNIQUE constraint failed: usuarios.telefono"
      },
      "correo": {
        "value": "SQLITE_CONSTRAINT: UNIQUE constraint failed: usuarios.correo"
      }
    },
    "securitySchemes": {
      "Auth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
